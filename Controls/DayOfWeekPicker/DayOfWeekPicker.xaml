<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:GymBro.Controls.DayOfWeekPicker"
             x:Class="GymBro.Controls.DayOfWeekPicker.DayOfWeekPicker">

    <FlexLayout
        Direction="Row"
        JustifyContent="SpaceBetween"
        AlignItems="Center"
        HorizontalOptions="FillAndExpand"
        VerticalOptions="Center">

        <local:DayBox x:Name="DayBoxMonday" DayName="Mon" />
        <local:DayBox x:Name="DayBoxTuesday" DayName="Tue" />
        <local:DayBox x:Name="DayBoxWednesday" DayName="Wed" />
        <local:DayBox x:Name="DayBoxThursday" DayName="Thu" />
        <local:DayBox x:Name="DayBoxFriday" DayName="Fri" />
        <local:DayBox x:Name="DayBoxSaturday" DayName="Sat"/>
        <local:DayBox x:Name="DayBoxSunday" DayName="Sun"  />

    </FlexLayout>

</ContentView>
