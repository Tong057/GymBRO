<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:GymBro.Controls.WeekDayPicker"
             x:Class="GymBro.Controls.WeekDayPicker.WeekDayPicker">
    <FlexLayout
        x:Name="DayBoxList"
        Direction="Row"
        JustifyContent="SpaceBetween"
        AlignItems="Center"
        HorizontalOptions="FillAndExpand"
        VerticalOptions="Center"
        MaximumWidthRequest="550">

        <local:DayBox x:Name="DayBoxMonday"/>
        <local:DayBox x:Name="DayBoxTuesday" />
        <local:DayBox x:Name="DayBoxWednesday" />
        <local:DayBox x:Name="DayBoxThursday"/>
        <local:DayBox x:Name="DayBoxFriday"/>
        <local:DayBox x:Name="DayBoxSaturday"/>
        <local:DayBox x:Name="DayBoxSunday"/>

    </FlexLayout>
</ContentView>

