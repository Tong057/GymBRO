<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:GymBro.Controls.DayBox"
             x:Class="GymBro.Views.TrainingDaysPage">

    <ScrollView>

        <VerticalStackLayout>
            <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="3">
                <controls:DayBox DayName="Пон" SelectedColor="{StaticResource PrimaryFocusColor}" IsChecked="True"/>
                <controls:DayBox DayName="Втр" SelectedColor="{StaticResource PrimaryFocusColor}"/>
                <controls:DayBox DayName="Срд" SelectedColor="{StaticResource PrimaryFocusColor}"/>
                <controls:DayBox DayName="Чтв" SelectedColor="{StaticResource PrimaryFocusColor}"/>
                <controls:DayBox DayName="Птц" SelectedColor="{StaticResource PrimaryFocusColor}"/>
                <controls:DayBox DayName="Суб" SelectedColor="{StaticResource PrimaryFocusColor}"/>
                <controls:DayBox DayName="Вск" SelectedColor="{StaticResource PrimaryFocusColor}"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>


    </ScrollView>

</ContentPage>
